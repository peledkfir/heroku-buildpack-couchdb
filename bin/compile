#!/bin/sh
# bin/compile BUILD_DIR CACHE_DIR ENV_DIR

NAME=apache-couchdb-2.3.1
URL=https://www.apache.org/dyn/closer.lua?path=/couchdb/source/2.3.1/$NAME.tar.gz
LOG=$BUILD_DIR/log
echo $(which escript)

export_env_dir() {
  echo "exporting env dir"
  # env_dir=$1
  # whitelist_regex=${2:-''}
