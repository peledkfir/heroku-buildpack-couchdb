URL=https://archive.apache.org/dist/couchdb/source/2.0.0/$NAME.tar.gz 
LOG=$BUILD_DIR/log
ERLEXEC=
echo $BUILD_DIR
echo $CACHE_DIR
echo $ENV_DIR
echo $(which escript)

